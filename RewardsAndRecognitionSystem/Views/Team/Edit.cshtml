@model RewardsAndRecognitionRepository.Models.Team

@{
    ViewData["Title"] = "Edit Team";
}

<h2 class="mb-4">Edit Team</h2>

<div class="card shadow-sm border-0 p-4" style="max-width: 600px; margin: auto;">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Team Name</label>
            <input asp-for="Name" class="form-control border-dark-subtle" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="TeamLeadId" class="form-label">Team Lead</label>
            <select asp-for="TeamLeadId" asp-items="ViewBag.TeamLeads" class="form-select border-dark-subtle">
                <option value="">-- Select Team Lead --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="ManagerId" class="form-label">Manager</label>
            <select asp-for="ManagerId" asp-items="ViewBag.Managers" class="form-select border-dark-subtle">
                <option value="">-- Select Manager --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="DirectorId" class="form-label">Director</label>
            <select asp-for="DirectorId" asp-items="ViewBag.Directors" class="form-select border-dark-subtle">
                <option value="">-- Select Director --</option>
            </select>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
            <button type="submit" class="btn btn-dark px-4">Update</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
