@model RewardsAndRecognitionRepository.Models.User

<form asp-action="Edit" method="post" id="editUserForm">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TeamId" class="form-label">Team</label>
        <select asp-for="TeamId" asp-items="ViewBag.Teams" class="form-select">
            <option value="">-- Select Team --</option>
        </select>
        <span asp-validation-for="TeamId" class="text-danger"></span>
    </div>

    <div class="mb-4">
        <label class="form-label">Role</label>
        <select name="SelectedRole" class="form-select">
            @foreach (var role in ViewBag.Roles as List<string>)
            {
                <option value="@role" selected="@(role == (ViewBag.SelectedRole as string))">@role</option>
            }
        </select>
    </div>

    <div class="d-flex justify-content-end gap-2 pt-3">
        <button type="button" class="btn btn-secondary text-white bg-secondary border-0" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary text-white bg-primary border-0">Save</button>
    </div>
</form>
